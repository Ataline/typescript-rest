{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./release",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, 
        "noResolve": false,
        "isolatedModules": false
    },
    "exclude": [
        "node_modules",
        "typings",
        "release"
    ]
}